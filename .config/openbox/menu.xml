<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">

  <menu id="system-menu" label="System">
    <item label="Openbox Configuration Manager">
      <action name="Execute">
	     <command>obconf</command>
	     <startupnotify>
	       <enabled>yes</enabled>
	     </startupnotify>
      </action>
    </item>
    <item label="Reconfigure Openbox">
      <action name="Reconfigure"/>
    </item>
    <!-- <separator /> -->
    <!-- <item label="GTK Theme"> -->
    <!--   <action name="Execute"> -->
    <!--     <execute>lxappearance</execute -->
    <!--   </action> -->
    <!-- </item> -->
    <separator/>
    <item label="Log Out">
      <action name="Exit">
	     <prompt>yes</prompt>
      </action>
    </item>
  </menu>

  <menu id="root-menu" label="Openbox 3">
    <item label="Terminal">
      <action name="Execute">
	     <execute>xfce4-terminal</execute>
      </action>
    </item>
    <item label="Emacs">
      <action name="Execute">
	     <execute>emacsclient -c</execute>
      </action>
    </item>
    <item label="VSCode">
      <action name="Execute">
	     <execute>code</execute>
      </action>
    </item>
    <item label="Firefox">
      <action name="Execute">
	     <execute>firefox</execute>
      </action>
    </item>
    <item label="Steam">
      <action name="Execute">
	     <execute>steam</execute>
      </action>
    </item>
    <item label="PCManFM">
      <action name="Execute">
	     <execute>pcmanfm</execute>
      </action>
    </item>
    <separator />
    <menu id="system-menu"/>
  </menu>

</openbox_menu>
